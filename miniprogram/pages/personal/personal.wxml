
    <view class="header">
        <image src="../photos/1.png" class="header-image"></image>
        <view class="avatar-wrapper" bindtap="onAvatarTap">
            <image class="avatar" src="{{user.avatarUrl}}" mode="aspectFill"></image>
        </view>
        <view class="greeting">Hi, Lynn!</view>
    </view>
<text class="order-title">我的订单</text>
    <!-- Check if the user has orders -->
  <view class="container">
    <view wx:if="{{order}}">
        <!-- Order Info -->
        <view class="order">
            <view class="order-detail" bindtap="getmessage">
                    <text class="order-item">{{order.eventName}}</text>
                    <text class="order-date">{{order.date}}</text>
                    <text class="order-location">{{order.location}}</text>
                    <text class="order-price">¥ {{order.price}} / 共{{order.number}}张</text>
            </view>
                    <image src="{{order.orderImage}}" class="order-image" wx:if="{{order}}"></image>
        </view>
    </view>
    <!-- If no order, show default interface -->
    <view wx:else>
        <view class="no-order">
            <text>还没有订单信息噢，赶快下单吧！</text>
        </view>
    </view>
</view>
