.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  width: 100%;
  position: relative;
}

.header-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.profile {
  position: absolute;
  top: 160px;
  left: 20px;
  display: flex;
  align-items: center;
}

.profile-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px solid white;
}

.greeting {
  color: white;
  font-size: 18px;
  margin-left: 10px;
}

.order {
  width: 100%;
  background-color: white;
  border-radius: 8px;
  margin-top: 20px;
  padding: 15px;
}

.order-title {
  font-size: 16px;
  font-weight: bold;
}

.order-detail {
  margin-top: 10px;
}

.order-item,
.order-date,
.order-location,
.order-price {
  margin-top: 5px;
  font-size: 14px;
}

.services {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.service {
  width: 23%;
  padding: 10px;
  background-color: white;
  text-align: center;
  border-radius: 8px;
  font-size: 14px;
}
