.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 32px;
  padding-right: 32px;
  background-color: rgb(250, 250, 250);
}

.header {
  width: 100%;
  position: relative;
}

.logo {
  width: 100%;
  height: 64px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 32px;
}

.content {
  font-family: 'Ink Free', sans-serif;
  font-size: 22px;
}

.title-container {
  padding:17.5px;
}

/*
@font-face {
  font-family: 'Codystar';
  src: url('../index/Codystar/Codystar-Light.ttf') format('truetype');
}
*/

.title {
  font-family: "Codystar", sans-serif;
  color: rgb(208, 164, 122);
  font-size: 30px;
}

.header-image {
  width: 224px;
  height: 168px;
  object-fit: cover;
  border-radius:10px ;
}

.profile-container {
  display: flex;
  flex-direction: row; /* 横向排列 */
  overflow-x: scroll; /* 启用横向滚动 */
  width: 100%; /* 滚动容器的宽度 */
  white-space: nowrap;
}

.profile,
.profile1 {
  position: relative; /* 为了让子元素使用绝对定位 */
  box-sizing: border-box; /* 包括padding和border在内的宽度计算 */
  padding-right: 10px; /* 设置右边距 */
}

.profile-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px solid white;
}

.subtitle {
  color: white;
  position: absolute;
  bottom: 0;
  left: 0;
}

.order {
  width: 100%;
  background-color: white;
  border-radius: 8px;
  margin-top: 20px;
  padding: 15px;
}

.order-title {
  font-size: 16px;
  font-weight: bold;
}

.order-detail {
  margin-top: 10px;
}

.order-item,
.order-date,
.order-location,
.order-price {
  margin-top: 5px;
  font-size: 14px;
}

.services {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.service {
  width: 23%;
  padding: 10px;
  background-color: white;
  text-align: center;
  border-radius: 8px;
  font-size: 14px;
}
