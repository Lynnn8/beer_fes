.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 32px;
  background-color: rgb(250, 250, 250);
}

.header {
  width: 100%;
  position: relative;
}

.logo {
  width: 100%;
  height: 72px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 32px;
}

.content {
  font-family: 'Ink Free', sans-serif;
  font-size: 22px;
}

.title-container {
  padding:17.5px;
