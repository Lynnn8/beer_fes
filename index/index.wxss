  font-size: 14px;
}

.services {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.service {
  width: 23%;
  padding: 10px;
  background-color: white;
  text-align: center;
  border-radius: 8px;
  font-size: 14px;
}


/* 轮播图 */
.banner-swiper{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
  background-color: rgb(250, 250, 250);
} 

swiper {
  display: block;
  height: 540rpx;
  font-size: 0;
}

.slide-image{
  width: 91%;
  display: block;
  height: 224px;
  border-radius: 20rpx;
  font-weight: bold;
  object-fit: cover;
} 

.goods-info{
  font-size: 36rpx;
  font-weight: 650;
  font-family: 'PingFang SC';
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: white;
  position: absolute;
  bottom: 105px;
  left: 25px;
}

.prefix {
  font-size: 24rpx;
  color: #000;
}

.projects {
  width: 100%;
  display: flex;
  height: 380px;
  justify-content: flex-start;
  flex-direction:column;
  margin-left: 0;
  background-color: rgb(250, 250, 250) ;
}

.title-content {
  font-weight: 500;
  color: rgb(73, 73, 73);
  font-size: 16px;
  padding-top: 10px;
  width: 100px;
  height: 20px;
}

/* 蒙版不会做nmd */

/* 票 */
.ticket {
  position: relative;
  background-color: #fff;
  margin-top: 24px;
  overflow: hidden;
  margin-right: 32px;
}

.ticket::before,
.ticket::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 32px;
  height: 32px;
  background-color: rgb(250, 250, 250);
  border-radius: 50%;
  transform: translateY(-50%);
}

.ticket::before {
  left: -16px;
}

.ticket::after {
  right: -16px;
}


.ticket-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  margin-left: 32px;
  margin-right: 32px;
}

.ticket-info {
  display: flex;
  flex-direction: column;
}

.ticket-title {
  font-size: 16px;
  font-weight: bold;
}

.ticket-subtitle {
  font-size: 14px;
  color: #888;
  font-weight: 300;
}

.ticket-date {
  font-size: 12px;
  color: #844F12;
}

.ticket-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price {
  font-size: 24px;
  color: #000;
  font-weight: 800;
}

.buy-button {
  background-color: #D0A36F;
  color: #fff;
  border: none;
  border-radius: 10px;
  width: auto;
  height: 45px;
  text-align: center;
  margin-top: 16px;
  margin-bottom: 10px;
}
