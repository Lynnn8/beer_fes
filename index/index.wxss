.title {
  font-family: "Codystar", sans-serif;
  color: rgb(208, 164, 122);
  font-size: 30px;
}

.order {
  width: 100%;
  background-color: white;
  border-radius: 8px;
  margin-top: 20px;
  padding: 15px;
